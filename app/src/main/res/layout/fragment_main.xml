<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_favourite_songs"
        style="@style/Text.Header"
        android:text="@string/favourite_songs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_favourite_songs"
        style="@style/RecyclerViewMainFragmentHorizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_favourite_songs"
        tools:listitem="@layout/item_recycler_view_main_fragment" />

    <TextView
        android:id="@+id/text_view_my_playlists"
        style="@style/Text.Header"
        android:text="@string/my_playlists"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recycler_view_favourite_songs" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_my_playlists"
        style="@style/RecyclerViewMainFragmentHorizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_my_playlists"
        tools:listitem="@layout/item_recycler_view_main_fragment" />

    <Button
        android:id="@+id/player"
        style="@style/ButtonAkaPlayer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>