<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonAuthorization" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">38dp</item>
    </style>

    <style name="FABMyPlaylists" parent="Widget.Design.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">24dp</item>
    </style>

    <style name="PlayerImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@color/background_main</item>
    </style>

    <style name="PlayerImageButton.Margin30">
