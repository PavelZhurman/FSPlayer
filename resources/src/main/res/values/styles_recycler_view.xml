<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RecyclerViewVerticalList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="RecyclerViewMainFragmentHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager"</item>
    </style>

    <style name="PlayerPager">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">340dp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

</resources>